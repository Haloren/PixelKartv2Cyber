<!DOCTYPE html>
<html>
  <head>
    <title>PixelKartv2Cyber</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>
      <% if logged_in? %>
        <nav>
          <ul>
            <li><%= link_to "Home", user_path(@user) %></li>
            <li><%= link_to "Build", new_kart_path %></li>
            <li><%= link_to "Reviews", reviews_path %></li>
            <li><%= link_to "Clubs", clubs_path %></li>
            <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
          </ul>
        </nav>
      <% end %>
    </header>

    <%= yield %>

    <div class="help"><%= link_to "HELP", help_path %></div>

    <div class="copyright"><small> &copy;2020 PixelKartv1 </small></div>
  
  </body>
</html>
