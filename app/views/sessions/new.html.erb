<div class="start">
    
    <div class="container-start">    
        <br><br><br>
        <h1> Pixel Kart Cyber Edition<h1>
            
        <%= form_for :user do |f| %>
            
            <%= f.email_field :email, placeholder: "Email_", required:true, class: "container-input" %>
            <%= f.password_field :password, placeholder: "Password_", required: true, class: "container-input" %>
            
            <%= submit_tag "Login", class: "submitbutton" %>
        <% end %>
        
        <br>
        <button class="linkbtn">
            <%= link_to "Login with Google", "/auth/google_oauth2" %>
            <span class="linkbtn__glitch"></span>
        </button>
        <br>
        <button class="linkbtn">    
            <%= link_to "Create an Account", signup_path %>
            <span class="linkbtn__glitch"></span>
        </button>
    </div>

</div>